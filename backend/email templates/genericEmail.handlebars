<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Welcome Email</title>
    {{!-- prettier-ignore --}}
    <style>
      /* General Styles */
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
      }
      table {
        border-spacing: 0;
        width: 100%;
      }
      td {
        padding: 0;
      }

      /* Main Container */
      .email-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #ffffff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      /* Header Section */
      .email-header {
        background-color: #007bff;
        padding: 20px;
        text-align: center;
        color: white;
      }
      .email-header h1 {
        margin: 0;
        font-size: 24px;
      }

      /* Body Section */
      .email-body {
        padding: 30px;
        color: #333333;
      }
      .email-body h2 {
        margin-top: 0;
        color: #007bff;
      }
      .email-body p {
        font-size: 16px;
        line-height: 1.6;
      }

      /* Button */
      .cta-button {
        display: inline-block;
        padding: 12px 24px;
        background-color: #007bff;
        color: #fff !important; /* Ensure the text is white */
        font-size: 16px;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 20px;
      }

      /* Ensure that links within the button have white text */
      a.cta-button {
        color: #fff !important;
        text-decoration: none; /* Remove underline */
      }

      /* Footer Section */
      .email-footer {
        background-color: #f4f4f4;
        padding: 20px;
        text-align: center;
        font-size: 14px;
        color: #666666;
      }
      .email-footer a {
        color: #007bff;
        text-decoration: none;
      }
      .email-footer p {
        margin: 5px 0;
      }

      /* Responsive Design */
      @media only screen and (max-width: 600px) {
        .email-container {
          width: 100% !important;
        }
        .email-body,
        .email-footer {
          padding-left: 15px;
          padding-right: 15px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Main Email Container -->
    <table role='presentation' class='email-container'>
      <!-- Header -->
      <tr>
        <td class='email-header'>
          <h1>{{subject}}</h1>
        </td>
      </tr>

      <!-- Body -->
      <tr>
        <td class='email-body'>
          {{!-- <h2>Hello {{username}},</h2> --}}

          <p>{{{body}}}</p>
          {{!-- <p>{{trackingPixelUrl}}</p> --}}

          <!-- Call-to-Action Button -->
          {{!-- <a href='{{dashboardLink}}' class='cta-button'>Access Dashboard</a> --}}
        </td>
      </tr>

      <!-- Footer -->
      <tr>
        <td class='email-footer'>
          <p>
            If you have any questions, feel free to
            <a href='mailto:support@example.com'>contact our support team</a>.
          </p>
          <p>
            Best regards,<br />
            {{senderName}}<br />
            The
            {{companyName}}
            Team
          </p>
          <p>&copy; {{year}} {{companyName}}. All rights reserved.</p>
        </td>
      </tr>
    </table>

    <img src='{{trackingPixelUrl}}' alt='' width='1' height='1' style='display: none;' />
  </body>
</html>